                <!--*********Iphone price**********-->

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <customfonts.MyTextView
                        android:id="@+id/email"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/colorSub"

                        />

                    <customfonts.MyTextView
                        android:id="@+id/emailValue"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="jklsd@gmail.com"
                        android:textColor="@color/colorTex"

                        />
                </LinearLayout>

                <!--*********Brand**********-->

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <customfonts.MyTextView
                        android:id="@+id/gender"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textColor="@color/colorSub"

                        />

                    <customfonts.MyTextView
                        android:id="@+id/genderValue"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textColor="@color/colorTex"

                        />
                </LinearLayout>

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <customfonts.MyTextView
                        android:id="@+id/rank"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ranking"
                        android:textColor="@color/colorSub"

                        />

                    <customfonts.MyTextView
                        android:id="@+id/rankValue"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:textColor="@color/colorTex"

                        />
                </LinearLayout>

                <!-- *********size********** -->













                <!--*********Guarantee**********-->

                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp"
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/myFavs"
                        android:layout_marginTop="20dp"

                        >

                        <ImageView
                            android:layout_weight="1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/star"
                            android:layout_gravity="center"
                            android:gravity="bottom"

                            />

                        <customfonts.MyTextView
                            android:layout_weight="1"
                            android:id="@+id/block"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="My Favourites"

                            android:gravity="center"
                            android:textSize="12dp"
                            android:textColor="#4c71f5"
                            />

                    </LinearLayout>

                    <View

                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colordevider"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"

                        />

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        android:layout_marginTop="20dp"
                        >

                        <ImageView
                            android:layout_weight="1"
                            android:layout_width="50dp"
                            android:id="@+id/commentImage"
                            android:layout_height="50dp"
                            android:src="@drawable/comment"
                            android:layout_gravity="center"
                            android:gravity="bottom"

                            />

                        <customfonts.MyTextView
                            android:layout_weight="1"
                            android:id="@+id/addComment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Add a comment"

                            android:gravity="center"
                            android:textSize="12dp"
                            android:textColor="#4c71f5"
                            />

                    </LinearLayout>

                    <View

                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colordevider"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"


                        />




                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/chatLayout"

                        android:layout_marginTop="20dp"
                        >

                        <ImageView
                            android:layout_weight="1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/chat"
                            android:layout_gravity="center"
                            android:gravity="bottom"

                            />



                        <customfonts.MyTextView
                            android:gravity="center"
                            android:layout_weight="1"
                            android:id="@+id/startChat"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Start chat"
                            android:layout_gravity="center"
                            android:textSize="12dp"
                            android:textColor="#4c71f5"
                            />
                    </LinearLayout>

                    <View

                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colordevider"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"

                        />



                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/blockLayout"

                        android:layout_marginTop="20dp"
                        >

                        <ImageView
                            android:layout_weight="1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/block"
                            android:layout_gravity="center"
                            android:gravity="bottom"

                            />



                        <customfonts.MyTextView
                            android:gravity="center"
                            android:layout_weight="1"
                            android:id="@+id/blockImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Block user"
                            android:layout_gravity="center"
                            android:textSize="12dp"
                            android:textColor="#4c71f5"
                            />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#f2f2f2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YOUR RATE:"
                        android:padding="16dp"
                        android:textSize="13dp"
                        android:textColor="@color/colorSub"
                        />
                    <LinearLayout
                        android:layout_width="450dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/com_facebook_button_background_color_focused">

                        <RatingBar
                            android:id="@+id/ratingBar"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="60dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:numStars="5"
                            android:background="@color/com_facebook_button_background_color_focused"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#f2f2f2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ABOUT USER"
                        android:id="@+id/about_user"
                        android:padding="16dp"
                        android:textSize="13dp"
                        android:textColor="@color/colorSub"
                        />



                    <UI_objects.ExpandableHeightListView
                        android:id="@+id/listview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fff"/>


                </LinearLayout>












            </LinearLayout>
        </LinearLayout>
    </ScrollView>



